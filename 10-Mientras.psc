Proceso Estructura_repetitiva_mientras
	
	// Definimos las variables
	definir indice como entero;
	
	// De 1 a 10
	indice <- 1;
	Mientras indice <= 10 Hacer
		Escribir indice;
		indice <- indice + 1;
	FinMientras
	
	// De 10 a 1
	Escribir "Inverso";
	indice <- 10;
	Mientras indice > 0 Hacer
		Escribir indice;
		indice <- indice - 1;
	FinMientras
	
FinProceso
